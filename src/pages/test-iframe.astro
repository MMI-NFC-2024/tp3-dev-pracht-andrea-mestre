---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <main class="max-w-3xl mx-auto py-8">
        <button onclick="history.back()" class="mb-4 px-4 py-2 rounded bg-gray-200 text-gray-700 hover:bg-gray-300 transition font-bold">&#8592; Retour</button>
        <nav class="mb-8 flex justify-center gap-4">
            <a
                href="/species/Adelie"
                target="speciesFrame"
                class="px-4 py-2 rounded bg-purple-100 text-purple-900 hover:bg-purple-200 transition"
                >Adelie</a
            >
            <a
                href="/species/Gentoo"
                target="speciesFrame"
                class="px-4 py-2 rounded bg-red-100 text-red-900 hover:bg-red-200 transition"
                >Gentoo</a
            >
            <a
                href="/species/Chinstrap"
                target="speciesFrame"
                class="px-4 py-2 rounded bg-green-100 text-green-700 hover:bg-green-200 transition"
                >Chinstrap</a
            >
        </nav>
        <iframe
            name="speciesFrame"
            src="/species/Adelie"
            class="w-full"
            style="height:510px; border:1px solid #ccc; border-radius:8px; box-shadow:0 2px 8px #0001;"
        ></iframe>
    </main>
</Layout>
